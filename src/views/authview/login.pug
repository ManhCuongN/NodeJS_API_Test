extends ../layout/layout

block layout-content
 .main
  form.form#form-1(action= "/web/auth/loginUser", method="POST")
    h3.heading Thành viên đăng nhập
    p.desc  ❤️
    .spacer
    if typeof alert !== "undefined"
     for val in alert
        .alert.alert-danger(role="alert") #{val.msg}
    else
    .form-group
      label.form-label(for="id") IdUser
      input.form-control(name="id", type="text", placeholder="VD: email@domain.com" )
      span.form-message
       
    .form-group
      label.form-label(for="password") Mật khẩu
      input#password.form-control(name="password", type="password", placeholder="Nhập mật khẩu")
      span.form-message    
    button.form-submit Đăng nhập
    a(href="/web/auth/signup") Chưa có tài khoản